@model Boa.Sample.Controllers.BoaIntegrationModel
<!-- IFrame -->
<div id="iframe-host" style="width: 100%; height: 100%; border: 0; flex-grow: 1; background-color: #223150;"></div>
<!-- hack for safari (safari does not support cookies coming from iframe) -->
<img style="display:none" onerror="loadFrame()" onload="loadFrame()" src="@Model.BoaUrl/client?lang=@Model.LanguageCode&token=@Model?.User?.Token" />

<script>
    function loadFrame() {
        // hack for safari (safari does not support cookies coming from iframe)
        // timeout is there so that we make sure cookie is set by the img tag
        setTimeout(function () {
            var frame = '<iframe id="iframe-host" style="width: 100%; height: 100%; border: 0; flex-grow: 1; background-color: #223150;" src="@Model.BoaUrl/client?lang=@Model.LanguageCode&token=@Model?.User?.Token"></iframe>';
            $("#iframe-host").append(frame);
        }, 100);
    }
</script>
