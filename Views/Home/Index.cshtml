@{
    ViewData["Title"] = "Home";
}

<div class="page-home">

<!-- Home -->
<section id="section-home" class="page-section column center-xs middle-xs">

    <!-- Animated Background -->
    <div class="animated-bg">
        <div class="bg"></div>
        <div class="bg bg1"></div>
        <div class="bg bg2"></div>
    </div>

    <!-- Content -->
    <div class="section-wrapper row">

        <!-- Logo + Motto -->
        <h1 class="motto col-md-7 self-center-xs">
            Bet the Game<br/>
            <strong>Bet on Action!</strong>
        </h1>

        <!-- Devices -->
        <div class="devices-container col-xs col-md-5">
            <img class="boa-phone-1" src="/images/graphics/graphic-boa-1.png" alt=""/>
            <img class="boa-phone-2" src="/images/graphics/graphic-boa-2.png" alt=""/>
        </div>

    </div>

</section>

<!-- Products -->
<section id="section-products" class="page-section column">
    <div class="section-wrapper column middle-xs center-xs">

        <!-- Section title -->
        <h1 class="section-title">Product Suite</h1>

        <!-- Content -->
        <div class="product-container row">
            <div class="product col-xs-12 col-sm-4">
                <img class="product-img" src="/images/graphics/graphic-product-bet.png" alt=""/>
                <p class="product-txt">Gives you the opportunity to bet minute by minute on action by action.</p>
            </div>
            <div class="product col-xs-12 col-sm-4">
                <img class="product-img" src="/images/graphics/graphic-product-pool.png" alt=""/>
                <p class="product-txt">
                    Follow the match action! Make your picks, action by action, conquering
                    your friends &amp; other fans in your quest for the pot.
                </p>
            </div>
            <div class="product col-xs-12 col-sm-4">
                <img class="product-img" src="/images/graphics/graphic-product-jackpot.png" alt=""/>
                <p class="product-txt">
                    Follow the action! Make your picks action by action, ultimately challenging
                    yourself to claim the Grand Jackpot.
                </p>
            </div>
        </div>

    </div>
</section>

<!-- USPs -->
<section id="section-usps" class="page-section row middle-xs">
    <div class="section-wrapper column middle-xs center-xs">

        <!-- Section title -->
        <h1 class="section-title">USPs</h1>

        <!-- Content -->
        <div class="usp-content row">
            <div class="usp-item col-xs-12 col-sm-3">
                <img class="usp-icon" src="/images/icons/icon-engagement.svg" alt=""/>
                <h2 class="usp-title">Engagement</h2>
                <p class="usp-txt">
                    Unparalleled in-game sportsbook experience bringing players closer to the action
                    than you ever believed imaginable.
                </p>
            </div>
            <div class="usp-item col-xs-12 col-sm-6">
                <img class="usp-icon" src="/images/icons/icon-aqusition.svg" alt=""/>
                <h2 class="usp-title">Acquisition</h2>
                <p class="usp-txt">
                    New product offering possibilities from automated real-time odds and bet creation based
                    on Opta and Runniing Ball data feeds.
                </p>
            </div>
            <div class="usp-item col-xs-12 col-sm-3">
                <img class="usp-icon padding-10" src="/images/icons/icon-retention.svg" alt=""/>
                <h2 class="usp-title">Retention</h2>
                <p class="usp-txt">Back office analytics and trading platform optimising targeting</p>
            </div>

            <!-- Second row -->
            <div class="usp-item col-xs-12 col-sm-3">
                <div class="usp-item col-xs-12">
                    <img class="usp-icon padding-5" src="/images/icons/icon-algorithm.svg" alt=""/>
                    <h2 class="usp-title">Algorithms</h2>
                    <p class="usp-txt">Unique player and action based pricing algorithms</p>
                </div>
                <div class="usp-item col-xs-12">
                    <img class="usp-icon padding-5" src="/images/icons/icon-risk-management.svg" alt=""/>
                    <h2 class="usp-title">Risk Management</h2>
                    <p class="usp-txt">Fully managed trading services</p>
                </div>
            </div>

            <div class="usp-item column middle-xs center-xs col-xs-12 col-sm-6">
                <img class="ups-middle-img" src="/images/graphics/graphic-gaming-macbook-boa.png" alt=""/>
            </div>

            <div class="usp-item col-xs-12 col-sm-3">
                <div class="usp-item col-xs-12">
                    <img class="usp-icon padding-10" src="/images/icons/icon-automation.svg" alt=""/>
                    <h2 class="usp-title">Automation</h2>
                    <p class="usp-txt">Highly automated solution requiring limited trading effort</p>
                </div>
                <div class="usp-item col-xs-12">
                    <img class="usp-icon padding-10" src="/images/icons/icon-coverage.svg" alt=""/>
                    <h2 class="usp-title">Coverage</h2>
                    <p class="usp-txt">Extended coverage across all tier one competitions</p>
                </div>
            </div>
        </div>

    </div>
</section>

