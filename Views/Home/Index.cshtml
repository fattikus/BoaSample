<!-- Contact -->
<section id="section-contact" class="page-section row middle-xs">
    <div class="section-wrapper row middle-xs top-xs">

        <!-- Section title -->
        <h1 class="section-title col-xs-12">Get in touch</h1>

        <p class="section-subtitle">Please submit information and one of our representatives will be in touch shortly.</p>

        <!-- Map -->
        <div id="contact-map" class="col-xs-12 col-md-6"></div>

        <!-- Form -->
        <form id="contact-form" class="form column col-xs-12 col-md-6">

            <!--Full Name-->
            <input id="contact-name" class="field fullname" type="text" placeholder="Name..." required/>

            <!--Email Address-->
            <input id="contact-email" class="field email" type="text" placeholder="Email Address..." required/>

            <!--Phone Number-->
            <input id="contact-company" class="field company" type="text" placeholder="Company..."/>

            <!--Message-->
            <textarea id="contact-message" class="field message" type="text" placeholder="Enter message.."></textarea>

            <div class="row">

                <div class="button-wrap col-xs-6">
                    <!--Clear-->
                    <button id="contact-clear" class="contact-button contact-clear row center-xs">
                        Clear
                    </button>
                </div>

                <div class="button-wrap col-xs-6">
                    <!--Submit-->
                    <button id="contact-send" class="contact-button contact-send row center-xs">
                        Send
                    </button>
                </div>

            </div>

            <span id="contact-send-loader" class="info">Sending...</span>
            <span class="validation-alert"></span>
            <span class="info" id="contact-send-confirm">Thanks for reaching out. We'll get back to you shortly!</span>
        </form>

    </div>
</section>


<script src="~/scripts/contact.js"></script>
<script src="~/scripts/contact-map.js"></script>
</div>